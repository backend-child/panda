<%- include('../layouts/adminHeader') %>

<h2 class="page-title">Edit a page</h2>
<a href="/admin/pages" class="btn btn-primary">Back to all pages</a>
<br /><br />

<h1>Editing success Page</h1>

<form method="post" action="/admin/pages/edit-page/<%= slug %>">
  <div class="form-group">
    <label for="Title"></label>
    <input
      type="text"
      name="title"
      class="form-control"
      placeholder="Title"
      value="<%= title %>"
    />
  </div>

  <div class="form-group">
    <label for="Slug"></label>
    <input
      type="text"
      name="slug"
      class="form-control"
      placeholder="Slug"
      value="<%= slug %>"
    />
  </div>

  <div class="form-group">
    <label for="Content"></label>
    <textarea name="content" class="form-control" cols="30" rows="10">
<%= content %></textarea
    >
  </div>

  <input type="hidden" value="<%=title  %>" />
  <input type="hidden" value="<%=slug  %>" />
  <input type="hidden" value="<%=content  %>" />
  <input type="hidden" value="<%=page  %>" />

  <button class="btn btn-primary" aria-placeholder="Write some content">
    Submit
  </button>
</form>

<%- include('../layouts/adminFooter') %>
